<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="#ffffff">
    <LinearLayout
        android:id="@+id/pageName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="32dp"
        android:gravity="center">
        <TextView
            android:id="@+id/acitivityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정"
            android:textSize="16dp"
            android:textColor="@color/colorTitlePrimaryDark"
            android:textAlignment="center"
            android:gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/userInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="25dp"
        android:paddingVertical="15dp"
        android:background="@drawable/border_layout"
        app:layout_constraintTop_toBottomOf="@+id/pageName">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image1"
                    android:src="@drawable/profile"
                    android:background="@drawable/image_frame"
                    android:adjustViewBounds="true"
                    android:maxHeight="100dp"
                    android:maxWidth="100dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/randomName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="화난 제이지"
                    android:textSize="12dp"
                    android:layout_margin="6dp"
                    android:textColor="@color/colorTitlePrimaryDark"/>
                <TextView
                    android:id="@+id/userId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12dp"
                    android:layout_margin="6dp"
                    android:textColor="@color/colorTitlePrimaryDark"/>
                <TextView
                    android:id="@+id/testCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12dp"
                    android:layout_margin="6dp"
                    android:textColor="@color/colorTitlePrimaryDark"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/pswChange"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:textSize="12dp"
                android:text="비밀번호 변경"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/round_button"
                android:paddingHorizontal="16dp"
                />
            <Button
                android:id="@+id/sec"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="탈퇴하기"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/round_button"
                android:layout_marginHorizontal="15dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:text="나의 진단목록"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        android:paddingVertical="5dp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/userInfo"/>

    <ListView
        android:id="@+id/settingtestList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintBottom_toTopOf="@+id/logoutBtn"
        app:layout_constraintTop_toBottomOf="@+id/titleBar" />

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="로그아웃"
        android:textSize="16dp"
        android:textColor="#C0C0C0"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>