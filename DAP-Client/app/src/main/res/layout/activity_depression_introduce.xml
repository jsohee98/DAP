<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DepressionIntroduceActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/pageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우울도 자가 진단"
        android:textColor="@color/colorTitlePrimaryDark"
        android:textSize="16dp"
        android:layout_marginTop="8dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/head1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우울증 자가진단 검사지"
        android:textStyle="bold"
        android:textSize="26dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="72dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/pageName"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="지난 일주일간 당신의 상태에 관한 질문입니다. \n그와 같은 일들이 얼마나 자주 일어났는지 응답해 주세요."
        android:textColor="@color/colorTitlePrimaryDark"
        android:textSize="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintTop_toBottomOf="@+id/head1"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>